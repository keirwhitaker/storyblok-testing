{
	"plugins": ["prettier-plugin-tailwindcss", "@prettier/plugin-ruby"],
	"printWidth": 3000,
	"useTabs": true,
	"overrides": [
		{
			"files": ["./_layouts/**/*.liquid"],
			"options": {
				"parser": "html"
			}
		},
		{
			"files": ["**/*.rb"],
			"options": {
				"parser": "ruby"
			}
		},
		{
			"files": ["**/*.erb"],
			"options": {
				"parser": "erb"
			}
		}
	]
}
