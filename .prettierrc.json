{
	"plugins": ["@shopify/prettier-plugin-liquid", "prettier-plugin-tailwindcss", "@prettier/plugin-ruby"],
	"printWidth": 3000,
	"useTabs": true,

	"overrides": [
		{
			"files": ["**/*.liquid"],
			"options": {
				"parser": "liquid-html"
			}
		},
		{
			"files": ["**/*.rb"],
			"options": {
				"parser": "ruby"
			}
		},
		{
			"files": ["**/*.erb"],
			"options": {
				"parser": "erb"
			}
		}
	]
}
